<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_dashboard">

    <fragment
        android:id="@+id/nav_dashboard"
        android:name="com.keremgok.smsforward.ui.fragments.DashboardFragment"
        android:label="@string/nav_dashboard"
        tools:layout="@layout/fragment_dashboard">
        
        <action
            android:id="@+id/action_dashboard_to_forwarders"
            app:destination="@id/nav_forwarders"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
            
        <action
            android:id="@+id/action_dashboard_to_settings"
            app:destination="@id/nav_settings"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
            
        <action
            android:id="@+id/action_dashboard_to_security"
            app:destination="@id/nav_security"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
            
        <action
            android:id="@+id/action_dashboard_to_data"
            app:destination="@id/nav_data"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/nav_forwarders"
        android:name="com.keremgok.smsforward.ui.fragments.ForwardersFragment"
        android:label="@string/nav_forwarders"
        tools:layout="@layout/fragment_forwarders">
        
        <action
            android:id="@+id/action_forwarders_to_dashboard"
            app:destination="@id/nav_dashboard"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left" />
    </fragment>

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.keremgok.smsforward.ui.fragments.SettingsFragment"
        android:label="@string/nav_settings"
        tools:layout="@layout/fragment_settings">
        
        <action
            android:id="@+id/action_settings_to_advanced_filters"
            app:destination="@id/nav_advanced_filters"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
            
        <action
            android:id="@+id/action_settings_to_backup_manager"
            app:destination="@id/nav_backup_manager"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/nav_security"
        android:name="com.keremgok.smsforward.ui.fragments.SecurityFragment"
        android:label="@string/nav_security"
        tools:layout="@layout/fragment_security" />

    <fragment
        android:id="@+id/nav_data"
        android:name="com.keremgok.smsforward.ui.fragments.DataFragment"
        android:label="@string/nav_data"
        tools:layout="@layout/fragment_data" />

    <fragment
        android:id="@+id/nav_advanced_filters"
        android:name="com.keremgok.smsforward.ui.fragments.AdvancedFiltersFragment"
        android:label="@string/advanced_filters_title"
        tools:layout="@layout/fragment_advanced_filters">
        
        <action
            android:id="@+id/action_advanced_filters_to_settings"
            app:destination="@id/nav_settings"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left" />
    </fragment>

    <fragment
        android:id="@+id/nav_backup_manager"
        android:name="com.keremgok.smsforward.ui.fragments.BackupManagerFragment"
        android:label="@string/backup_manager_title"
        tools:layout="@layout/fragment_backup_manager">
        
        <action
            android:id="@+id/action_backup_manager_to_settings"
            app:destination="@id/nav_settings"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left" />
    </fragment>

</navigation> 